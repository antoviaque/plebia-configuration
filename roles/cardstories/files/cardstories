### BEGIN INIT INFO
# Provides:          cardstories
# Required-Start:    $all
# Required-Stop:     $all
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Starts a service for the Twisted plugin '$PLUGIN'
# Description:       cardstories twistd plugin starter
### END INIT INFO

PLUGIN="cardstories"

DAEMON=/usr/local/bin/twistd
PIDFILE=/var/www/.cardstories.pid
LOGFILE=/var/www/log/cardstories.org_twisted.log
CARDSTORIES_DIR=/var/www/cardstories
CARDSTORIES_DB=/var/www/db/cardstories.org_twisted.sqlite
CARDSTORIES_USER=www-data
CARDSTORIES_GROUP=www-data

INTERNAL_SECRET=piosa2shieyeoCai7fah
GAME_TIMEOUT=561600

#[ -r /etc/default/$PLUGIN ] && . /etc/default/$PLUGIN
# Load the VERBOSE setting and other rcS variables
. /lib/init/vars.sh

# Define LSB log_* functions.
# Depend on lsb-base (>= 3.0-6) to ensure that this file is present.
. /lib/lsb/init-functions

export PYTHONPATH=$CARDSTORIES_DIR:$CARDSTORIES_DIR/etc/cardstories

# Redirection of 3 is needed because Debconf uses it and it might 
# be inherited by webserver. See bug #446324.
exec 3>/dev/null

if [ ! -x $DAEMON ]; then
  echo "ERROR: Can't execute $DAEMON."
  exit 1
fi

start_service() {
  echo -n " * Starting $PLUGIN... "
  if [ ! -d "/var/run/$PLUGIN" ]; then
      mkdir -p /var/run/$PLUGIN
      chown $CARDSTORIES_USER:$CARDSTORIES_GROUP /var/run/$PLUGIN
  fi
  start-stop-daemon --start --quiet --pidfile $PIDFILE --chuid "$CARDSTORIES_USER:$CARDSTORIES_GROUP" --exec $DAEMON -- \
	--pidfile $PIDFILE \
	--logfile=$LOGFILE \
	cardstories \
	--interface=0.0.0.0 --port=5000 \
	--game-timeout=$GAME_TIMEOUT \
	--db=$CARDSTORIES_DB \
	--plugins-dir=$CARDSTORIES_DIR/plugins \
	--plugins-libdir=/tmp \
        --plugins-logdir=$CARDSTORIES_DIR/log \
	--plugins-confdir=$CARDSTORIES_DIR/tests \
	--plugins="djangoauth chat activity table mail bot" \
	--plugins-pre-process="djangoauth chat bot" \
	--plugins-post-process="table" \
	--internal-secret="$INTERNAL_SECRET"
  e=$?
  if [ $e -eq 1 ]; then
    echo "already running"
    return
  fi

  if [ $e -eq 255 ]; then
    echo "couldn't start :("
    return
  fi

  echo "done"
}

stop_service() {
  echo -n " * Stopping $PLUGIN... "
  start-stop-daemon --stop --quiet --retry 10 --pidfile $PIDFILE
  e=$?
  if [ $e -eq 1 ]; then
    echo "not running"
    return
  fi

  echo "done"
}

case "$1" in
  start)
    start_service
    ;;
  stop)
    stop_service
    ;;
  restart|force-reload)
    stop_service
    start_service
    ;;
  *)
    echo "Usage: /etc/init.d/$PLUGIN {force-reload|start|stop|restart}" >&2
    exit 1   
    ;;
esac

exit 0
